<?xml version="1.0" encoding="UTF-8"?>
<cnf:configuration
	xmlns:cnf="http://dsg.ce.unipr.it/software/p2pam/schema/configuration"
	xmlns:aut="http://dsg.ce.unipr.it/software/p2pam/schema/automator"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dsg.ce.unipr.it/software/p2pam/schema/configuration configuration.xsd ">
	<aut:automator>
		<aut:operation handler="TopologyObserver"></aut:operation>
		<aut:loop handler="SimpleFor">
			<aut:params>
				<aut:param name="lowerBoundIncluded" value="1" />
				<aut:param name="upperBoundIncluded" value="100" />
				<aut:param name="increment" value="1" />
			</aut:params>
			<aut:operations>
				<aut:operation handler="MMOneChurnEvent">
					<aut:params>
						<aut:param name="lambda" value="3" />
						<aut:param name="mu" value="4" />
					</aut:params>
				</aut:operation>
				<aut:selection handler="SimpleIf">
					<aut:params>
						<aut:param name="condition" value="N -> N+1" />
					</aut:params>
					<aut:operations>
						<aut:selection handler="SimpleIf">
							<aut:params>
								<aut:param name="condition"
									value="N mul 100" />
							</aut:params>
							<aut:operations>
								<aut:operation
									handler="TopologyObserver" method="plotCCDF">
									<aut:params>
										<aut:param name="xScale"
											value="dec" />
										<aut:param name="yScale"
											value="log" />
									</aut:params>
								</aut:operation>
							</aut:operations>
						</aut:selection>
						<aut:operation handler="NodeSettings">
							<aut:params>
								<aut:param name="maxPeerview"
									value="100" />
								<aut:param name="downloadBandwidth"
									value="10Mbps" />
								<aut:param name="uploadBandwidth"
									value="2Mbps" />
								<aut:param name="CPU" value="2GHz" />
								<aut:param name="RAM" value="2GB" />
							</aut:params>
						</aut:operation>
						<aut:operation
							handler="BAConnectivityProtocol">
							<aut:params>
								<aut:param name="m" value="3" />
							</aut:params>
						</aut:operation>
						<aut:operation
							handler="HighlyConfigurableRoutingProtocol">
							<aut:params>
								<aut:param name="numRecipients"
									value="1" />
								<aut:param
									name="recipientSelectionStrategy" value="JXTA-SRDI" />
								<aut:param name="initialTTL" value="3" />
								<aut:param name="TTLUpdateStrategy"
									value="JXTA-SRDI" />
								<aut:param name="cacheSize" value="100" />
							</aut:params>
						</aut:operation>
						<aut:operation handler="FileSharingProtocol">
							<aut:params>
								<aut:param name="aParam" value="1" />
							</aut:params>
						</aut:operation>
					</aut:operations>
				</aut:selection>
				<aut:loop handler="SimpleFor">
					<aut:params>
						<aut:param name="lowerBoundIncluded" value="1" />
						<aut:param name="randomUpperBoundIncluded"
							value="10" />
						<aut:param name="increment" value="1" />
					</aut:params>
					<aut:operations>
						<aut:operation handler="NodeSelector">
						</aut:operation>
						<aut:operation handler="FileSharingProtocol"
							method="publish">
							<aut:params>
								<aut:param name="resource"
									value="random" />
							</aut:params>
						</aut:operation>
					</aut:operations>
				</aut:loop>
			</aut:operations>
		</aut:loop>
	</aut:automator>
</cnf:configuration>
