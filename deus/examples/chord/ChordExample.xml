<?xml version="1.0" encoding="UTF-8"?>
<aut:automator
	xmlns:aut="http://dsg.ce.unipr.it/software/deus/schema/automator"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dsg.ce.unipr.it/software/deus/schema/automator ../../schema/automator.xsd ">


	<!-- *** EVENTS *** -->

	<aut:event id="birth" handler="it.unipr.ce.dsg.deus.example.chord.BirthChordEvent" 
		schedulerListener="it.unipr.ce.dsg.deus.example.chord.ChordBirthSchedulerListener" >
	 	<aut:events><!-- events to be scheduled on created node -->
		    <aut:reference id="connection" />
		    <aut:reference id="disconnection" />
			<aut:reference id="death" />
		</aut:events>
	</aut:event>

	<aut:event id="connection" handler="it.unipr.ce.dsg.deus.example.chord.ChordConnectionNode" oneShot="true" >
		<aut:params>
			<aut:param name="isBidirectional" value="true" />
			<aut:param name="numInitialConnections" value="4" />
		</aut:params>
	</aut:event>
	
	<aut:event id="disconnection" handler="it.unipr.ce.dsg.deus.p2p.event.DisconnectionEvent" oneShot="true" />
	
	<aut:event id="death" handler="it.unipr.ce.dsg.deus.impl.event.DeathEvent" oneShot="true" />
	
	<!-- *** NODE SPECIES *** -->

	<aut:node id="chordPeer" handler="it.unipr.ce.dsg.deus.example.chord.ChordPeer">
		<aut:resources>
			<aut:resource handler="it.unipr.ce.dsg.deus.impl.resource.AllocableResource">
				<aut:params>
					<aut:param name="type" value="risorsaVideo" />
					<aut:param name="amount" value="2" /><!-- *512 MHz = 2GHz -->
				</aut:params>	
			</aut:resource>
			<aut:resource handler="it.unipr.ce.dsg.deus.impl.resource.AllocableResource">
				<aut:params>
					<aut:param name="type" value="risorsaAudio" />
					<aut:param name="amount" value="4" /><!-- *256 MB = 1GB -->
				</aut:params>	
			</aut:resource>
			<aut:resource handler="it.unipr.ce.dsg.deus.impl.resource.AllocableResource">
				<aut:params>
					<aut:param name="type" value="risorsaTesto" />
					<aut:param name="amount" value="10" /><!-- *10000 MB = 100GB -->
				</aut:params>	
			</aut:resource>
			<aut:resource handler="it.unipr.ce.dsg.deus.impl.resource.AllocableResource">
				<aut:params>
					<aut:param name="type" value="risorsaImmagine" />
					<aut:param name="amount" value="10" /><!-- *10000 MB = 100GB -->
				</aut:params>	
			</aut:resource>
		</aut:resources>
	</aut:node>


	<!-- *** PROCESSES *** -->

	<aut:process id="poisson" handler="it.unipr.ce.dsg.deus.impl.process.PoissonProcess">
		<aut:params>
			<aut:param name="meanArrival" value="10" />
		</aut:params>
		<aut:nodes>
			<aut:reference id="chordPeer" />
		</aut:nodes>
		<aut:events>
			<aut:reference id="birth" />
		</aut:events>
	</aut:process>
	

	<!-- *** SIMULATION *** -->

	<aut:engine maxvt="2000001" seed="123456789"> 
		<aut:logger level="INFO" />
		<aut:processes>
			<aut:reference id="poisson" />
		</aut:processes>
	</aut:engine>

</aut:automator>