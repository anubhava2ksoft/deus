<?xml version="1.0" encoding="UTF-8"?>
<aut:automator
	xmlns:aut="http://dsg.ce.unipr.it/software/deus/schema/automator"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dsg.ce.unipr.it/software/vulcan/schema/automator automator.xsd ">


	<!-- *** EVENTS *** -->

	<aut:event id="birth" handler="it.unipr.ce.dsg.deus.example.revol.RevolBirthEvent" >
		<aut:events><!-- events to be scheduled on created node -->
		    <aut:reference id="connection" />
		   	<!-- <aut:reference id="adaptation" /> -->
		    <aut:reference id="discovery" />
		    <aut:reference id="disconnection" />
			<aut:reference id="death" />
		</aut:events>
	</aut:event>

	<aut:event id="connection" handler="it.unipr.ce.dsg.deus.example.revol.RevolERConnectionEvent" oneShot="true" >
		<aut:params>
			<aut:param name="isBidirectional" value="true" />
			<aut:param name="numInitialConnections" value="3" />
		</aut:params>
	</aut:event>
	
 	<aut:event id="discovery" handler="it.unipr.ce.dsg.deus.example.revol.RevolDiscoveryEvent" >
		<aut:params>
			<aut:param name="hasSameAssociatedNode" value="true" />
			<aut:param name="cpu" value="1024" /><!-- MHz -->
			<aut:param name="ram" value="1024" /><!-- MB -->
			<aut:param name="disk" value="4096" /><!-- MB -->
			<aut:param name="meanArrivalTriggeredDiscovery" value="5" />
			<aut:param name="meanArrivalFreeResource" value="120000" />
		</aut:params>
	</aut:event>
	
	<aut:event id="adaptation" handler="it.unipr.ce.dsg.deus.example.revol.RevolAdaptationEvent" > 
		<aut:params>
			<aut:param name="hasSameAssociatedNode" value="true" />
			<aut:param name="a0" value="1" />
			<aut:param name="a1" value="4" />
			<aut:param name="a2" value="3" />
			<aut:param name="selectionStrategy" value="proportional" /> 
			<!-- other selection strategies: bestFitness, random, tournament, rank-based -->
		</aut:params>
	</aut:event>
	
	<aut:event id="disconnection" handler="it.unipr.ce.dsg.deus.impl.event.DisconnectionEvent" oneShot="true" />
	
	<aut:event id="death" handler="it.unipr.ce.dsg.deus.impl.event.DeathEvent" oneShot="true" />
	 
	<aut:event id="logNetworkSize" handler="it.unipr.ce.dsg.deus.impl.event.LogNetworkSizeEvent" />

	<aut:event id="logNodeDegree" handler="it.unipr.ce.dsg.deus.impl.event.LogNodeDegreeEvent" />
	
	<aut:event id="logRevolNodeStats" handler="it.unipr.ce.dsg.deus.example.revol.LogRevolNodeStatsEvent" />
	
	
	<!-- *** NODE SPECIES *** -->

	<aut:node id="revolNode" handler="it.unipr.ce.dsg.deus.example.revol.RevolNode">
		<aut:params>
			<!-- the following are factors used to compute avg values -->
			<aut:param name="cpuFactor" value="8" /><!-- *256 MHz = 2GB -->
			<aut:param name="ramFactor" value="8" /><!-- *256 MB = 2GB -->
			<aut:param name="diskFactor" value="320" /><!-- *256 MB = 81GB -->
		</aut:params>
	</aut:node>


	<!-- *** PROCESSES *** -->

	<!-- with 1/lambda = 1000 and 1/lambda' = 360000, we have E[N] = lambda/lambda' = 360 -->

	<aut:process id="poisson1" handler="it.unipr.ce.dsg.deus.impl.process.PoissonProcess">
		<aut:params>
			<aut:param name="meanArrival" value="1000" />
		</aut:params>
		<aut:nodes>
			<aut:reference id="revolNode" /><!-- this is to associate the process to a specific type of nodes -->
		</aut:nodes>
		<aut:events>
			<aut:reference id="birth" />
		</aut:events>
	</aut:process>

	<aut:process id="poisson2" handler="it.unipr.ce.dsg.deus.impl.process.PoissonProcess">
		<aut:params>
			<aut:param name="meanArrival" value="5" />
		</aut:params>
		<aut:nodes>
			<aut:reference id="revolNode" />
		</aut:nodes>
		<aut:events>
			<aut:reference id="connection" />
			<aut:reference id="death" />
		</aut:events>
	</aut:process>

	<aut:process id="poisson3" handler="it.unipr.ce.dsg.deus.impl.process.PoissonProcess">
		<aut:params>
			<aut:param name="meanArrival" value="1080000" /> 
		</aut:params>
		<aut:nodes>
			<aut:reference id="revolNode" />
		</aut:nodes>
		<aut:events>
			<aut:reference id="disconnection" />
		</aut:events>
	</aut:process>

	<aut:process id="poisson4" handler="it.unipr.ce.dsg.deus.impl.process.PoissonProcess">
		<aut:params>
			<aut:param name="meanArrival" value="90000" />
		</aut:params>
		<aut:nodes>
			<aut:reference id="revolNode" />
		</aut:nodes>
		<aut:events>
			<aut:reference id="discovery" />
		</aut:events>
	</aut:process>
	
	<aut:process id="periodic1" handler="it.unipr.ce.dsg.deus.impl.process.PeriodicProcess">
		<aut:params>
			<aut:param name="period" value="90000" />
		</aut:params>
		<aut:nodes>
			<aut:reference id="revolNode" />
		</aut:nodes>
		<aut:events>
			<aut:reference id="adaptation" />
		</aut:events>
	</aut:process>
	
	<aut:process id="periodic2" handler="it.unipr.ce.dsg.deus.impl.process.PeriodicProcess">
		<aut:params>
			<aut:param name="period" value="300000" /> 
		</aut:params>
		<aut:nodes>
			<aut:reference id="revolNode" />
		</aut:nodes>
		<aut:events>
		    <aut:reference id="logNetworkSize" />
			<aut:reference id="logNodeDegree" /> 
			<aut:reference id="logRevolNodeStats" /> 
		</aut:events>
	</aut:process>


	<!-- *** SIMULATION *** -->

	<aut:engine maxvt="5400001" seed="123456789"> <!-- 7200001 -->
		<aut:processes>
			<aut:reference id="poisson1" />
			<aut:reference id="periodic2" />	
		</aut:processes>
	</aut:engine>

</aut:automator>
