<?xml version="1.0" encoding="UTF-8"?>
<aut:automator
	xmlns:aut="http://dsg.ce.unipr.it/software/deus/schema/automator"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dsg.ce.unipr.it/software/deus/schema/automator ../../schema/automator.xsd ">


	<!-- *** EVENTS *** -->

	<aut:event id="birth" handler="it.unipr.ce.dsg.deus.impl.event.BirthEvent" 
		schedulerListener="it.unipr.ce.dsg.deus.example.energy.EnergyBirthSchedulerListener" >
	 	<aut:events><!-- events to be scheduled on created node -->
		    <aut:reference id="connection" />
		</aut:events>
	</aut:event>
	
	<aut:event id="birth2" handler="it.unipr.ce.dsg.deus.impl.event.BirthEvent" 
		schedulerListener="it.unipr.ce.dsg.deus.example.energy.EnergyBirthSchedulerListener" >
	 	<aut:events><!-- events to be scheduled on created node -->
		    <aut:reference id="connection" />
		   	<aut:reference id="discovery" /> 
		    <aut:reference id="disconnection" />
			<aut:reference id="death" />
		</aut:events>
	</aut:event>

	<aut:event id="connection" handler="it.unipr.ce.dsg.deus.p2p.event.MultipleRandomConnectionsEvent" oneShot="true" >
		<aut:params>
			<aut:param name="isBidirectional" value="true" />
			<aut:param name="numInitialConnections" value="3" />
		</aut:params>
	</aut:event>
	
 	<aut:event id="discovery" handler="it.unipr.ce.dsg.deus.example.energy.EnergyDiscoveryEvent" >
		<aut:logger level="INFO" />
		<aut:params>
			<aut:param name="hasSameAssociatedNode" value="false" />
			<aut:param name="power" value="10" /> <!-- kW -->
			<aut:param name="meanArrivalTriggeredDiscovery" value="2" />
			<aut:param name="meanArrivalFreeResource" value="500000" /> 
			<!-- thus each peer consumes maximum 8kW * 2.8h = 28kWh-->
			<aut:param name="numInitialConnections" value="4" />
		</aut:params>
	</aut:event>
	
	<aut:event id="freeres" handler="it.unipr.ce.dsg.deus.example.energy.EnergyFreeResourceEvent" >
		<aut:logger level="INFO" />
	</aut:event>
	
	<aut:event id="disconnection" handler="it.unipr.ce.dsg.deus.p2p.event.DisconnectionEvent" oneShot="true" />
	
	<aut:event id="death" handler="it.unipr.ce.dsg.deus.impl.event.DeathEvent" oneShot="true" />
	 
	<aut:event id="logPopulationSize" handler="it.unipr.ce.dsg.deus.impl.event.LogPopulationSizeEvent" />

	<aut:event id="logNodeDegree" handler="it.unipr.ce.dsg.deus.p2p.event.LogNodeDegreeEvent" />
	
	<aut:event id="logEnergyPeerStats" handler="it.unipr.ce.dsg.deus.example.energy.LogEnergyPeerStatsEvent" />
	
	
	<!-- *** NODE SPECIES *** -->

	<aut:node id="energyNode" handler="it.unipr.ce.dsg.deus.example.energy.EnergyPeer">
		<aut:params>
			<aut:param name="avgInitChromosome" value="5" />
			<aut:param name="isRandomInit" value="false" />
			<aut:param name="maxCost" value="5" />
			<aut:param name="queryTimeout" value="2" /> <!-- 2 csec (non esagerare che se no la select non viene mai eseguita perche' gli eventi terminano prima) -->
		</aut:params>
		<aut:resources>
			<aut:resource handler="it.unipr.ce.dsg.deus.impl.resource.AllocableResource">
				<aut:params>
					<aut:param name="type" value="powerFactor" />
					<aut:param name="amount" value="2" /><!-- * 5 kW -->
				</aut:params>	
			</aut:resource>
		</aut:resources>
	</aut:node>


	<!-- *** PROCESSES *** -->

	<aut:process id="twospeedspoisson" handler="it.unipr.ce.dsg.deus.impl.process.TwoSpeedsPoissonProcess">
		<aut:params>
			<aut:param name="firstMeanArrival" value="10" />
			<aut:param name="secondMeanArrival" value="100000" />
			<aut:param name="vtThreshold" value="50000" />
		</aut:params>
		<aut:nodes>
			<aut:reference id="energyNode" />
		</aut:nodes>
		<aut:events>
			<aut:reference id="birth" />
		</aut:events>
	</aut:process>

	<aut:process id="poisson1" handler="it.unipr.ce.dsg.deus.impl.process.PoissonProcess">
		<aut:params>
			<aut:param name="meanArrival" value="1000" />
		</aut:params>
		<aut:nodes>
			<aut:reference id="energyNode" />
		</aut:nodes>
		<aut:events>
			<aut:reference id="birth2" />
		</aut:events>
	</aut:process>

	<aut:process id="poisson2" handler="it.unipr.ce.dsg.deus.impl.process.PoissonProcess">
		<aut:params>
			<aut:param name="meanArrival" value="5" />
		</aut:params>
		<aut:nodes>
			<aut:reference id="energyNode" />
		</aut:nodes>
		<aut:events>
			<aut:reference id="connection" />
			<aut:reference id="death" />
		</aut:events>
	</aut:process>

	<aut:process id="poisson3" handler="it.unipr.ce.dsg.deus.impl.process.PoissonProcess">
		<aut:params>
			<aut:param name="meanArrival" value="1000000" /> 
		</aut:params>
		<aut:nodes>
			<aut:reference id="energyNode" />
		</aut:nodes>
		<aut:events>
			<aut:reference id="disconnection" />
		</aut:events>
	</aut:process>

	<aut:process id="poisson4" handler="it.unipr.ce.dsg.deus.impl.process.PoissonProcess">
		<aut:params>
			<aut:param name="meanArrival" value="2000" />
		</aut:params>
		<aut:nodes>
			<aut:reference id="energyNode" />
		</aut:nodes>
		<aut:events>
			<aut:reference id="discovery" />
		</aut:events>
	</aut:process>
	
	<aut:process id="periodic" handler="it.unipr.ce.dsg.deus.impl.process.PeriodicProcess">
		<aut:params>
			<aut:param name="period" value="100000" /> 
		</aut:params>
		<aut:events>
		    <aut:reference id="logPopulationSize" />
			<aut:reference id="logNodeDegree" /> 
			<aut:reference id="logEnergyPeerStats" /> 
		</aut:events>
	</aut:process>


	<!-- *** SIMULATION *** -->

	<aut:engine maxvt="5000001" seed="123456789"> 
		<aut:logger level="INFO" />
		<aut:processes>
			<aut:reference id="twospeedspoisson" /> 
			<aut:reference id="poisson4" />
			<aut:reference id="periodic" />
		</aut:processes>
	</aut:engine>

</aut:automator>
