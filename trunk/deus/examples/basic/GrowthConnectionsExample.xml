<?xml version="1.0" encoding="UTF-8"?>
<aut:automator
	xmlns:aut="http://dsg.ce.unipr.it/software/deus/schema/automator"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dsg.ce.unipr.it/software/deus/schema/automator automator.xsd ">


	<!-- *** EVENTS *** -->

	<aut:event id="birth" handler="it.unipr.ce.dsg.deus.impl.event.BirthEvent"
	 schedulerListener="it.unipr.ce.dsg.deus.example.basic.BirthSchedulerListener"><!-- when scheduled, creates a new node -->
		<aut:events><!-- events to be scheduled on created node --><!-- come garantisco l'ordine? -->
		    <aut:reference id="connection" />
		    <aut:reference id="disconnection" />
			<aut:reference id="immediateDeath" />
		</aut:events>
	</aut:event>

	<aut:event id="connection" handler="it.unipr.ce.dsg.deus.impl.event.SingleConnectionEvent" oneShot="true" >
		<aut:params>
			<aut:param name="isBidirectional" value="true" />
		</aut:params>
	</aut:event>

	<aut:event id="disconnection" handler="it.unipr.ce.dsg.deus.impl.event.DisconnectionEvent" oneShot="true" />

	<aut:event id="death" handler="it.unipr.ce.dsg.deus.impl.event.DeathEvent" />

	<aut:event id="immediateDeath" handler="it.unipr.ce.dsg.deus.impl.event.DeathEvent" oneShot="true" />

	<aut:event id="logNetworkSize" handler="it.unipr.ce.dsg.deus.impl.event.LogNetworkSizeEvent" />

	<aut:event id="logNodeDegree" handler="it.unipr.ce.dsg.deus.impl.event.LogNodeDegreeEvent" />

	<!-- *** NODE SPECIES *** -->

	<aut:node id="supernode" handler="it.unipr.ce.dsg.deus.impl.node.SuperNode">
		<aut:params>
			<aut:param name="maxPeerview" value="100" />
			<aut:param name="downloadBandwidth" value="10" /><!-- Mbps -->
			<aut:param name="uploadBandwidth" value="2" /><!-- Mbps -->
			<aut:param name="CPU" value="2" /><!-- GHz -->
			<aut:param name="RAM" value="2048" /><!-- MB -->
		</aut:params>
	</aut:node>


	<!-- *** PROCESSES *** -->

	<!-- with 1/lambda = 50 and 1/lambda' = 20000, we have E[N] = 400 -->

	<aut:process id="poisson1" handler="it.unipr.ce.dsg.deus.impl.process.PoissonProcess">
		<aut:params>
			<aut:param name="meanArrival" value="50" />
		</aut:params>
		<aut:nodes>
			<aut:reference id="supernode" />
		</aut:nodes>
		<aut:events>
			<aut:reference id="birth" />
		</aut:events>
	</aut:process>
	
	<aut:process id="poisson1a" handler="it.unipr.ce.dsg.deus.impl.process.PoissonProcess">
		<aut:params>
			<aut:param name="meanArrival" value="50" />
		</aut:params>
		<aut:nodes>
			<aut:reference id="supernode" />
		</aut:nodes>
		<aut:events>
			<aut:reference id="connection" />
		</aut:events>
	</aut:process>

	<aut:process id="poisson2" handler="it.unipr.ce.dsg.deus.impl.process.PoissonProcess">
		<aut:params>
			<aut:param name="meanArrival" value="20000" />
		</aut:params>
		<aut:nodes>
			<aut:reference id="supernode" />
		</aut:nodes>
		<aut:events>
			<aut:reference id="disconnection" />
			<aut:reference id="death" />
		</aut:events>
	</aut:process>

	<aut:process id="poisson3" handler="it.unipr.ce.dsg.deus.impl.process.PoissonProcess">
		<aut:params>
			<aut:param name="meanArrival" value="10" />
		</aut:params>
		<aut:nodes>
			<aut:reference id="supernode" />
		</aut:nodes>
		<aut:events>
			<aut:reference id="immediateDeath" />
		</aut:events>
	</aut:process>
	
	<aut:process id="periodic1" handler="it.unipr.ce.dsg.deus.impl.process.PeriodicProcess">
		<aut:params>
			<aut:param name="period" value="10000" />
		</aut:params>
		<aut:nodes>
			<aut:reference id="supernode" />
		</aut:nodes>
		<aut:events>
		    <aut:reference id="logNetworkSize" />
			<aut:reference id="logNodeDegree" />
		</aut:events>
	</aut:process>

	<!-- *** SIMULATION *** -->

	<aut:engine maxvt="100000"
		seed="123456789">
		<aut:logger level="ALL"/>
		<aut:processes>
			<aut:reference id="poisson1" />
			<aut:reference id="periodic1" />
		</aut:processes>
	</aut:engine>

</aut:automator>
